---
import { ViewTransitions } from 'astro:transitions';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="bg-black">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;700&display=swap" rel="stylesheet">
        
        <ViewTransitions />
    </head>
    <body class="bg-black text-gray-200 font-sans antialiased min-h-screen flex flex-col selection:bg-white selection:text-black">
        
        <nav class="fixed top-0 w-full z-50 px-6 py-6 flex justify-between md:justify-center items-center bg-gradient-to-b from-black via-black/80 to-transparent pointer-events-none">
    
    <div class="pointer-events-auto z-50 md:text-center md:w-full">
        <a href="/" class="text-2xl md:text-5xl font-bold tracking-[0.2em] uppercase text-white hover:opacity-80 transition drop-shadow-lg relative z-50">
            MADCRY | STUDIO
        </a>
    </div>

    <button id="menu-toggle" class="md:hidden pointer-events-auto text-white focus:outline-none z-50">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
    </button>

    <div class="hidden md:flex absolute left-0 w-full justify-center top-24 pointer-events-auto">
        <div class="flex gap-12 text-xs tracking-[0.25em] uppercase font-light items-center bg-black/50 backdrop-blur-sm px-6 py-2 rounded-full border border-white/5">
            <a href="/" class="hover:text-white text-gray-400 transition hover:underline underline-offset-4 decoration-1">Home</a>

            <div class="relative group">
                <a href="/shop" class="hover:text-white text-gray-400 transition hover:underline underline-offset-4 decoration-1 py-2 block">
                    Shop
                </a>
                <div class="absolute left-1/2 -translate-x-1/2 top-full pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 min-w-[150px]">
                    <div class="bg-black/95 border border-white/10 backdrop-blur-md flex flex-col p-2 text-center shadow-2xl">
                        <a href="/shop?category=one-piece" class="text-gray-400 hover:text-white hover:bg-white/10 py-2 transition px-4 whitespace-nowrap">One Piece</a>
                        <a href="/shop?category=dragon-ball" class="text-gray-400 hover:text-white hover:bg-white/10 py-2 transition px-4 whitespace-nowrap">Dragon Ball</a>
                        <a href="/shop?category=hxh" class="text-gray-400 hover:text-white hover:bg-white/10 py-2 transition px-4 whitespace-nowrap">Hunter x Hunter</a>
                        <a href="/shop?category=custom" class="text-gray-400 hover:text-white hover:bg-white/10 py-2 transition px-4 whitespace-nowrap">Custom</a>
                        <div class="border-t border-white/10 my-1"></div>
                        <a href="/shop" class="text-white font-bold hover:bg-white/10 py-2 transition px-4 whitespace-nowrap">Ver Todo</a>
                    </div>
                </div>
            </div>

            <a href="/blog" class="hover:text-white text-gray-400 transition hover:underline underline-offset-4 decoration-1">Blog</a>
            <a href="/contact" class="hover:text-white text-gray-400 transition hover:underline underline-offset-4 decoration-1">Contacto</a>
        </div>
    </div>

</nav>

        <div id="mobile-menu" class="fixed inset-0 bg-black z-40 transform translate-x-full transition-transform duration-500 ease-in-out md:hidden flex flex-col justify-center px-8">
            <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,_var(--tw-gradient-stops))] from-zinc-800/20 via-black to-black -z-10"></div>
            
            <nav class="flex flex-col space-y-8">
                <a href="/" class="mobile-link text-4xl font-bold uppercase tracking-tighter text-white/50 hover:text-white transition-colors">Home</a>
                
                <div class="space-y-4">
                    <a href="/shop" class="text-4xl font-bold uppercase tracking-tighter text-white hover:text-gray-300 transition-colors flex items-center justify-between">
                        Tienda
                        <span class="text-xs tracking-widest text-gray-500 border border-gray-700 px-2 py-1 rounded-full">ALL</span>
                    </a>
                    
                    <div class="pl-4 border-l border-white/10 flex flex-col space-y-3">
                        <a href="/shop?category=one-piece" class="text-lg text-gray-400 hover:text-white uppercase tracking-widest transition">One Piece</a>
                        <a href="/shop?category=dragon-ball" class="text-lg text-gray-400 hover:text-white uppercase tracking-widest transition">Dragon Ball</a>
                        <a href="/shop?category=hxh" class="text-lg text-gray-400 hover:text-white uppercase tracking-widest transition">Hunter x Hunter</a>
                        <a href="/shop?category=custom" class="text-lg text-gray-400 hover:text-white uppercase tracking-widest transition">Custom</a>
                    </div>
                </div>

                <a href="/blog" class="mobile-link text-4xl font-bold uppercase tracking-tighter text-white/50 hover:text-white transition-colors">Journal</a>
                <a href="/contact" class="mobile-link text-4xl font-bold uppercase tracking-tighter text-white/50 hover:text-white transition-colors">Contacto</a>
            </nav>

            <div class="mt-16 pt-8 border-t border-white/10">
                <p class="text-[10px] text-gray-600 uppercase tracking-widest">Madcry Studio © 2026</p>
            </div>
        </div>


        <div class="flex-grow">
            <slot />
        </div>

        <footer class="border-t border-white/10 bg-black pt-16 pb-8 px-6 mt-20">
            <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-12 text-center md:text-left">
                <div class="space-y-4">
                    <h4 class="text-xl font-bold uppercase tracking-widest text-white">Art Studio.</h4>
                    <p class="text-xs text-gray-500 leading-relaxed max-w-xs mx-auto md:mx-0">
                        Galería de arte independiente enfocada en piezas únicas y series limitadas. Explorando la oscuridad y la luz a través del lienzo.
                    </p>
                </div>
                <div class="space-y-4">
                    <h5 class="text-xs font-bold uppercase tracking-[0.2em] text-white">Cliente</h5>
                    <ul class="space-y-2 text-xs text-gray-500 uppercase tracking-wider">
                        <li><a href="#" class="hover:text-white transition">Envíos</a></li>
                        <li><a href="#" class="hover:text-white transition">FAQ</a></li>
                    </ul>
                </div>
                <div class="space-y-4">
                    <h5 class="text-xs font-bold uppercase tracking-[0.2em] text-white">Legal</h5>
                    <ul class="space-y-2 text-xs text-gray-500 uppercase tracking-wider">
                        <li><a href="#" class="hover:text-white transition">Aviso Legal</a></li>
                        <li><a href="#" class="hover:text-white transition">Privacidad</a></li>
                    </ul>
                </div>
            </div>
            <div class="mt-16 text-center border-t border-white/5 pt-8">
                <p class="text-[10px] text-gray-700 uppercase tracking-[0.3em]">
                    © 2026 Madcry Studio.
                </p>
            </div>
        </footer>
        
    </body>
</html>

<style is:global>
    body {
        font-family: 'Oswald', sans-serif;
    }
    body::-webkit-scrollbar {
        width: 0px;
        background: transparent;
    }
</style>

<script>
    // LÓGICA DEL MENÚ MÓVIL
    document.addEventListener('astro:page-load', () => {
        const menuBtn = document.getElementById('menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        const links = document.querySelectorAll('.mobile-link'); // Enlaces simples
        const shopLinks = mobileMenu?.querySelectorAll('a'); // Todos los enlaces del menú móvil

        let isMenuOpen = false;

        if (menuBtn && mobileMenu) {
            menuBtn.addEventListener('click', () => {
                isMenuOpen = !isMenuOpen;
                if (isMenuOpen) {
                    // Abrir menú
                    mobileMenu.classList.remove('translate-x-full');
                    document.body.style.overflow = 'hidden'; // Evitar scroll de fondo
                    // Cambiar icono a X (opcional, simple visual hack)
                    menuBtn.innerHTML = `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"></path></svg>`;
                } else {
                    // Cerrar menú
                    mobileMenu.classList.add('translate-x-full');
                    document.body.style.overflow = '';
                    menuBtn.innerHTML = `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"></path></svg>`;
                }
            });

            // Cerrar menú al hacer click en cualquier enlace
            shopLinks?.forEach(link => {
                link.addEventListener('click', () => {
                    isMenuOpen = false;
                    mobileMenu.classList.add('translate-x-full');
                    document.body.style.overflow = '';
                    menuBtn.innerHTML = `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="square" stroke-linejoin="miter" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"></path></svg>`;
                });
            });
        }
    });
</script>