---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="bg-black">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;700&display=swap" rel="stylesheet">
        
        <ViewTransitions />
	</head>
	<body class="bg-black text-gray-200 font-sans antialiased min-h-screen flex flex-col selection:bg-white selection:text-black">
        
        <nav class="fixed top-0 w-full z-50 flex flex-col items-center py-8 gap-4 bg-gradient-to-b from-black via-black/80 to-transparent pointer-events-none">
            
            <a href="/" class="text-4xl md:text-5xl font-bold tracking-[0.2em] uppercase text-white pointer-events-auto hover:opacity-80 transition drop-shadow-lg">
                MADCRY | STUDIO
            </a>

            <div class="flex flex-wrap justify-center gap-6 md:gap-10 text-[10px] md:text-xs tracking-[0.25em] uppercase font-light pointer-events-auto">
                <a href="/" class="hover:text-white text-gray-400 transition hover:underline underline-offset-4 decoration-1">Home</a>
                <a href="/shop" class="hover:text-white text-gray-400 transition hover:underline underline-offset-4 decoration-1">Tienda</a>
                <a href="/blog" class="hover:text-white text-gray-400 transition hover:underline underline-offset-4 decoration-1">Blog</a>
                <a href="/contact" class="hover:text-white text-gray-400 transition hover:underline underline-offset-4 decoration-1">Contacto</a>
            </div>
        </nav>

        <div class="flex-grow">
		    <slot />
        </div>

        <footer class="border-t border-white/10 bg-black pt-16 pb-8 px-6 mt-20">
            <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-12 text-center md:text-left">
                
                <div class="space-y-4">
                    <h4 class="text-xl font-bold uppercase tracking-widest text-white">Art Studio.</h4>
                    <p class="text-xs text-gray-500 leading-relaxed max-w-xs mx-auto md:mx-0">
                        Galería de arte independiente enfocada en piezas únicas y series limitadas. Explorando la oscuridad y la luz a través del lienzo.
                    </p>
                </div>

                <div class="space-y-4">
                    <h5 class="text-xs font-bold uppercase tracking-[0.2em] text-white">Cliente</h5>
                    <ul class="space-y-2 text-xs text-gray-500 uppercase tracking-wider">
                        <li><a href="#" class="hover:text-white transition">Estado del Pedido</a></li>
                        <li><a href="#" class="hover:text-white transition">Envíos y Entregas</a></li>
                        <li><a href="#" class="hover:text-white transition">Devoluciones</a></li>
                        <li><a href="#" class="hover:text-white transition">Preguntas Frecuentes (FAQ)</a></li>
                    </ul>
                </div>

                <div class="space-y-4">
                    <h5 class="text-xs font-bold uppercase tracking-[0.2em] text-white">Legal</h5>
                    <ul class="space-y-2 text-xs text-gray-500 uppercase tracking-wider">
                        <li><a href="#" class="hover:text-white transition">Aviso Legal</a></li>
                        <li><a href="#" class="hover:text-white transition">Política de Privacidad</a></li>
                        <li><a href="#" class="hover:text-white transition">Política de Cookies</a></li>
                        <li><a href="#" class="hover:text-white transition">Términos y Condiciones</a></li>
                    </ul>
                </div>
            </div>

            <div class="mt-16 text-center border-t border-white/5 pt-8">
                <p class="text-[10px] text-gray-700 uppercase tracking-[0.3em]">
                    © 2026 Art Studio. Todos los derechos reservados.
                </p>
            </div>
        </footer>
        
	</body>
</html>

<style is:global>
    body {
        font-family: 'Oswald', sans-serif;
    }
    /* Scrollbar invisible */
    body::-webkit-scrollbar {
        width: 0px;
        background: transparent;
    }
</style>